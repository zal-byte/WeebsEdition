{
    "namespace": "loli",

    "button_panel": {
    "type": "panel",
    "layer": 2,
    "size": [ "fill" , "100%" ]
    },

    "panel_nama_player": {
    "type": "panel",
    "layer": 2,
    "size": [ "35%" , "100%" ],
    "max_size": [ "40%" , "100%" ]
    },

    "panel_nama_pict": {
    "type": "panel",
    "layer": 2,
    "size": [ "30px" , "100%" ]
    },

    "profile_label": {
    "type": "label",
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "size": [ "70%", 10 ],
    "max_size": [ "80%" , "100%" ],
    "color": [ 1.0 , 1.0, 1.0 ]
   // "font_type": "MinecraftTen"
  },

  "profn@loli.profile_label": {
    "layer": 5,
    "text": "Name",
  	"font_size": "small"
    },
   
    "playername@loli.profile_label": {
    "layer": 5,
    "text": "#playername",
  	"font_size": "",
    "bindings": [
        {
         "binding_name": "#playername"
        }
      ]
    },

    "gamerpic": {
    "type": "image",
    "size": [ 18 , 18 ],
    "bindings": [
          {
            "binding_name": "#gamerpic_texture_path",
            "binding_name_override": "#texture"
          },
       {
          "binding_name": "#gamerpic_texture_location_type",
          "binding_name_override": "#texture_file_system"
        }
      ]
    },

    "player_name_test": {
    "type": "panel",
    "size": [ "100%" , 30 ],
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "controls": [
         {
           "profile_name@loli.profn": {
           "offset": [ 2 , 6 ]
          }
       },
          {
            "playername@loli.playername": {
            "offset": [ 2 , 13 ]
          }
        }
      ]
    },

    "panel": {
      "type": "panel",
    //  "texture": "textures/ui-x/dialog/bg",
      "size": [ 150 , "100%" ]
    },

    "panel_nama_player@loli.panel": {
      "offset": [ 5 , -20 ],
      "size": [ "100%" , "100%" ],
      "controls": [
        {
          "stack_panel": {
          "type": "stack_panel",
          "size": [ "100%" , "100%" ],
          "orientation": "horizontal",
          "anchor_from": "bottom_left",
          "anchor_to": "bottom_left", 
          "controls": [
              {
                "panel_nama_pict@loli.panel_nama_pict": { "controls": [ { "gamerpic@loli.gamerpic": {}}]}
              },
              {
                "button_panel@loli.button_panel": { "controls": [ { "player_name_test@loli.player_name_test": {}}]}
              }
            ]
          }
        }
      ]
    },

    /*
    +-------------------------------------------------------------------+
    +--                                                               --+
    --+                 V E R S I M I N E C R A F T                   +--
    +--                                                               --+
    +-------------------------------------------------------------------+
    */

    "label": {
      "type": "label",
      "anchor_from": "top_right",
      "anchor_to": "top_right",
      "size": [ "default" , 10 ],
      "font_size": "",
      "color": [ 1.0, 1.0, 1.0],
      "layer": 2
    },

    "copyright@loli.label": {
    "layer": 5,
    "text": "menu.copyright",
  	"font_size": ""
    },
   
    "version@loli.label": {
    "layer": 5,
    "text": "#version",
  	"font_size": "",
    "bindings": [
        {
         "binding_name": "#version"
        }
      ]
    },

    "weebs@loli.label": {
      "layer": 5,
      "text": "Resourcepack Weebs Edition Version 1.7.0\nCreated By Han",
      "font_size": "small"
    },

    "version_panel": {
      "type": "panel",
      "offset": [ -5 , 8 ],
      "size": [ "100%" , 20 ],
      "anchor_from": "bottom_right",
      "anchor_to": "bottom_right",
      "controls": [
        {
          "stack_panel": {
          "type": "stack_panel",
          "size": [ "100%" , "100%" ],
          "orientation": "horizontal",
          "controls": [
            { "copyright@loli.copyright": {}},
            { "space": {"type": "panel", "size": [ 5 , 5 ]}},
            { "version@loli.version": {}},
            { "weebs@loli.weebs": {}}
            ]
          }
        }
      ]
    }
 }